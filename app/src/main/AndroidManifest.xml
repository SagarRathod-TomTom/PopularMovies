<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sagarrathod.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.PosterGridActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MovieDetailsActivity"
            android:label="@string/movie_details"
            android:icon="@mipmap/ic_launcher"
            android:parentActivityName=".activities.MovieDetailsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.PosterGridActivity" />
        </activity>
        <activity android:name=".activities.SettingsActivity"
            android:label="@string/movie_details"
            android:parentActivityName=".activities.MovieDetailsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.PosterGridActivity"/>
        </activity>

        <provider
            android:authorities="com.sagarrathod.popularmovies"
            android:name=".data.provider.MovieProvider"/>

    </application>

</manifest>